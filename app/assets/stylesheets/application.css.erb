ul{
  list-style-type: none;
}

.spacing{
  padding: 10px;
}
nav.navbar{
  margin-bottom: 0px;
}
html, body, #map { height: 100%; margin: 0; padding: 0;}
#content{
  background-image: url(<%= image_path "basketball-court.jpg" %>);
  background-size: cover;
  position:absolute;
  top:50;
  left: 0;
  height: calc(100% - 50px);
  width: 100%;
}

.landing{
  color: white;
}

.landing h1{
  margin-bottom: 150px;
}
.landing .row{
  margin: 10px;
}

.landing a{
  padding: 12px 20px;
  font-size: 1.5em;
  background-color: transparent;
  border: 2px solid black;
  color: black;
  transition: all 1s ease-in-out;
}
.landing a:hover{
  background-color: black;
  color: white;
}

#facebook-button{
  background-color: #383a7c;
  color: white;
  border: 2px solid #383a7c;
}
#facebook-button:hover{
  background-color: transparent;
  color: #383a7c;
}

#map{
  float:left;
  width: calc(200% / 3);
}

#sidebar{
  float:left;
  background-color: #eee;
  width: calc(100% / 3);
  height: 100%;
}