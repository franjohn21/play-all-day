ul{
  list-style-type: none;
  padding-left: 0px;
}
body{
  font-family: 'Ariel';
}
.spacing{
  padding: 10px;
}
nav.navbar{
  margin-bottom: 0px;
}
html, body, #map { min-height: 100%; margin: 0; padding: 0;}
#content{
  background-image: url(<%= image_path "basketball-court.jpg" %>);
  background-size: cover;
  position:absolute;
  left: 0;
  min-height: calc(100% - 50px);
  width: 100%;
}

.landing{
  color: white;
}

.landing h1{
  margin-bottom: 150px;
}
.landing .row{
  margin: 10px;
}

.landing a{
  padding: 12px 20px;
  font-size: 1.5em;
  background-color: transparent;
  border: 2px solid black;
  color: black;
  transition: all 1s ease-in-out;
}
.landing a:hover{
  background-color: black;
  color: white;
}

#facebook-button{
  background-color: #383a7c;
  color: white;
  border: 2px solid #383a7c;
}
#facebook-button:hover{
  background-color: transparent;
  color: #383a7c;
}

#map{
  float:left;
  width: 75%;
  box-shadow: 0px 0px 1px black;
}

#sidebar{
  float:left;
  background-color: transparent;
  width: 25%;
  height: 100%;
  color: white;
}
#fb-name{
  font-size: 1.3em;
  font-weight: bold;
}
#fb-email{

}

.sidebar_events{
  padding: 10px;
}

.event-node{
  color: #3F3F3F;
  background-color: white;
  opacity: 0.9;
  padding: 5px;
  margin: 3px;
  box-shadow: 0px 0px 3px black;
  border-radius: 4px;
  cursor: pointer;
  text-decoration: none;

}
#sidebar .event-node-link{
  text-decoration: none;
}
.event-node:hover{
  background-color: #eee;
}
.event-show{
  background-color: white;
  opacity: 0.9;
  border-radius: 4px;
  box-shadow: 0px 0px 5px black;
  padding: 40px;
  margin: 10px;
}

.user-node{
  box-shadow: 0px 0px 3px #3F3F3F;
  border-radius: 5px;
  padding: 5px;
  margin: 5px;
}
.show-image{
  float: left; 
  height: 50px; 
  border-radius: 5px;
  box-shadow: 0px 0px 3px #3f3f3f;
  margin: 3px;
}