.spacing{
  padding: 10px;
}

body{
  background-image: url(<%= image_path "basketball-court.jpg" %>);
  background-size: cover;
}

.landing{
  color: white;
}

.landing .row{
  margin-top: 150px;
}

.landing a{
  padding: 12px 20px;
  font-size: 1.5em;
  background-color: black;
  border: 2px solid black;
  color: white;
  transition: all 1s ease-in-out;
}
.landing a:hover{
  background-color: transparent;
  color: black;
}

#signup-button{
  background-color: transparent;
  color: black;
}
#signup-button:hover{
  background-color: black;
  color: white;
}

#map{
  float:left;
  width: calc(200% / 3);
}

#sidebar{
  float:left;
  background-color: #eee;
  width: calc(100% / 3);
}