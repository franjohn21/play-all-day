
<div id="sidebar">
  <img src = '<%= @current_user.img_url %>' style="float:left; margin: 5px;"></img>
  <div>
    <span id="fb-name"><%= @current_user.name %></span>
    <span id="fb-email"><%= @current_user.email %></span>
  </div>
  <div class="sidebar_events">
    <ul>
      <h3 style="text-shadow: 0px 0px 3px black">Games Near You </h3>
    <% @events.length.times do |i| %>
    <li class="event-node" id="event-<%=@events[i][:event].id %>">
          <a href="/events/<%= @events[i][:event].id %>" class="event-node-link"><p span="event-title"><%= @events[i][:event].title %> </p> </a>
          <p><%= @events[i][:event].location_name %> </p>
          <p><span class="num_going"><%= @events[i][:num_going] %></span> / <%= @events[i][:event].num_people %>  people </p>
        </li>
      <% end %>
    </ul>
    </div>
</div>
<div id="map" ></div>

 <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAF7bNkrouk4BrhFzk3mFUIRlBceQsKxXo">
    </script>

