  <div class="event-show text-center col-md-6 col-md-offset-3">
    <h1> <%= @event.title %> </h1>
    <img src="<%= @event.img_url %>"></img>
    <div class="text-left">
    <p><i class="fa fa-2x fa-map-marker"></i> <%= @event.location_name %> </p>

    <p><i class="fa fa-users" style="font-size: 1.2em"></i> <%= @users.length %> users going: </p>
    <p> <%= @event.start_time %> </p>

      <ul>
        <% @users.length.times do |x| %>
        <div class="row">
          <div class="col-md-6">
            <li class='user-node clearfix'>
              <img src="<%= @users[x].img_url %>" class="show-image"></img>
              <p style="font-weight: bold;"> <%= @users[x].name %> </p>
              <p> <%= @users[x].username %> </p>
              <p> <%= @users[x].email %></p>
            </li>
          </div>
        </div>
        <% end %>
      </ul>
    </div>
  </div>
